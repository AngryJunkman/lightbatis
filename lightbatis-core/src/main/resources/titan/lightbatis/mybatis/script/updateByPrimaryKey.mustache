UPDATE {{table}}
<set>
    {{#columns}}
        {{^identity}}
            {{#updatable}}
                {{!如果这个列是 乐观锁}}
                {{#if revision}}
                    <bind name="{{property}}_Version" value="@titan.lightbatis.utils.RevisionUtils@next({{property}})" />
                    {{column}} = #{ {{property}}_Version},
                {{/if}}

                {{#unless revision}}
                    {{#autoGenerated}}
                        {{!如果在更新的时机有自动生成的值，开始处理}}
                        {{#eq generatedEvent "Update"}}
                            <bind name="{{property}}_bind"
                                  value='@titan.lightbatis.generator.GeneratorHelper@generated(_parameter,"{{property}}", "{{generator}}", "{{mappedStatementId}}")'/>
                            {{column}} = {{>columnBindHolder}},
                        {{/eq}}
                        {{#neq generatedEvent "Update"}}
                            <if test="{{property}} != null">
                                {{column}} = {{>columnHolder}},
                            </if>
                        {{/neq}}
                    {{/autoGenerated}}
                    {{^autoGenerated}}
                        <if test="{{property}} != null">
                            {{column}} = {{>columnHolder}},
                        </if>
                    {{/autoGenerated}}
                {{/unless}}
            {{/updatable}}
        {{/identity}}
    {{/columns}}
</set>
<where>
    {{#pkColumns}}
       AND {{column}} = {{>columnHolder}}
    {{/pkColumns}}
</where>